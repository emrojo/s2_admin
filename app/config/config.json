{
  "baseUrl": "http://psd2g.internal.sanger.ac.uk:8000",

  "mockServices": false,

  "sample": {
    "mandatoryFields": ["sanger_sample_id_core"],

    "validStates": ["draft", "published"],

    "mandatoryIfStateIsPublished": [
      "taxon_id", "scientific_name", "common_name", "supplier_sample_name"
    ],

    "validSampleTypes": [
      "DNA Human", "DNA Pathogen", "RNA", "Blood", "Saliva", "Tissue Non-Tumour", "Tissue Tumour", "Pathogen", "Cell Pellet"
    ],

    "validGenders": [
      "Not applicable", "Male", "Female", "Mixed", "Hermaphrodite", "Unknown"
    ]
  }
}